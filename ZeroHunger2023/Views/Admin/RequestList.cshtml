
@{
    ViewBag.Title = "RequestList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>RequestList</h2>


<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Food Name</th>
        <th>Food Quantity</th>
        <th>Preserve Time</th>
        <th>Restaurant ID</th>
        <th>Status</th>




    </tr>

    @foreach (var data in Model)
    {
        <tr>
            <td>@data.ID</td>
            <td>@data.FoodName</td>
            <td>@data.FoodQuantity</td>
            <td>@data.PreserveTime</td>
            <td>@data.RestaurantID</td>
            <td>@data.Status</td>
           

            <td><a class="btn btn-secondary" href="/Admin/RequestDetails/@data.ID">Show Details</a></td>
           
        </tr>


    }

</table>


